
 <view class="root">
  <view class="nav">
    <view class="{{selected?'leftNavSelected':'leftNav'}}" bindtap="selected">
       借入书籍
    </view>
    <view class="{{selected1?'rightNavSelected':'rightNav'}}" bindtap="selected1">
       借出书籍
       </view>
  </view>
  <view class="{{selected?'show':'hidden'}}">
    <scroll-view class="scrollview" scroll-y="true" style="height: 100vh" bindscrolltolower="bindDownLoad" bindscroll="scroll">
            <view class="wrap_item" wx:for="{{borrowlist}}" >
                
                <view id="{{item.out_trade_no}}" class="one" bindtap="clickItem">
                    <view class="two">
                        <!--<view class="three"></view>-->
                        <image  class="image" src="{{item.imageUrl[0]}}" mode="aspectFill"></image>
                    </view>      
                    <view class="four">
                        <view class="five">
                            {{""+item.itemName}}
                        </view>
                        <view class="six">
                            <!--{{"剩余归还天数："+"20"+""}}-->
                        </view>
                    
                        <view class="six">
                             {{item.status > 0?"剩余归还天数：" + item.leftDays:""}}
                        </view>
                        <view class="six">
                            <!--{{"剩余归还天数："+"20"+""}}-->
                        </view>
                        <view class="seven">
                            <view class="money">
                                 {{"租金：¥"+item.chargePrice}}
                            </view>
                                 <view class="state" >
            
                             
                                     <view hidden="{{ item.status  == 0 ?false:true}}" class="confirmClass" bindtap="confirmAccept"> 
                                     <image data-statu="open" data-index="{{index}}" catchtap="weixinTap" class="dianhua" src="./weixin.png"></image>
                                         <image hidden="true" data-index="{{index}}" catchtap="callTap" class="dianhua" src="./dianhua.png"></image>
                                         <button  data-statu="open" data-index="{{index}}" class="stateBtn" catchtap="powerDrawer">确认收到</button>
                                     </view>

                                     <view  id="{{item}}" hidden="{{item.status == 1?false:true}}" class="applyBack">
                                         <button data-index="{{index}}" data-statu="open" id="{{item.out_trade_no}}" class="stateBtn" catchtap="apply_back">申请归还</button>
                                    </view>

                                        <view hidden="{{item.status == 3?false:true}}" class="finished">
                                         等待出借人确认
                                       </view>

                                     <view hidden="{{item.status == 2?false:true}}" class="finished">
                                         已归还
                                       </view>
                            </view>
                           
                        </view>

                    </view> 
                </view> 
        
                
            </view>
    </scroll-view>
  </view>
