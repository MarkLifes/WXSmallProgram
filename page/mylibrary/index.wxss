/* page/mylibrary/index.wxss */
.container{

    height: 100%;
    padding: 20rpx;
}

.mylibrary_item{
    display: flex;
    margin-bottom: 10rpx;
    background-color: #FFFFFF;
}

.mylibrary_item_2{
    display: flex;
    margin-bottom: 10rpx;
    background-color: #f0f8ff;
    color: #333;
}




.mylibrary_image{
    height: 250rpx;
    width: 250rpx;
    background-color: #ffffff;
}

.mylibrary_text{    /*右侧样式*/
    display: flex;
    padding-left: 10rpx;
    padding-top: 22rpx;
    padding-right: 12rpx;
    flex: 1;
 
    flex-direction: column;
    justify-content: center;
    align-items: center;

}
.mybook_text{
    display: flex;
    padding-left: 10rpx;
    padding-top: 2rpx;
    padding-right: 12rpx;
    flex: 1;
    flex-direction: column;
}

.mylibrary_left{
     display: flex;
    flex: 1;
}

/*右边工具bar*/
.rightBar{
    display: flex;
    flex: 1;
    background-color: #00ff00;
}
.mylibrary_update{
    display: flex;
    flex: 1;
    font-size: 40rpx;
    background-color:#DEDEDE;
    justify-content: center;
    align-items: center;
    color: #fff9f3
    
}
.mylibrary_delete{
    display: flex;
    flex: 1;
    font-size: 40rpx;
    background-color:#ec3323;
    justify-content: center;
    align-items: center;
    color: #fff9f3
}


.mylibrary_title{
    font-size: 30rpx;
    margin-left: 5dp;
    /*background: #f2f9f3;*/
}

.mylibrary_title_2{
     font-size: 50rpx;
    margin-left: 5dp;
    padding-bottom: 20rpx;
    margin-top: 10rpx;
}
.mylibrary_description{
    margin-top: 15rpx;
    font-size: 26rpx;
    margin-left: 5dp;
    color: #666666;
    /*background: #f259f3;*/
}
.footer{
    flex: 1;
    display: flex;

    flex-direction: row;
    /*background-color: #f4f9f3;*/
    /*align-items:flex-end;*/
    /*align-content: flex-end;*/
    /*align-self: flex-end;*/
}
.state{
    font-size: 26rpx;
    color: #ff0000;
    align-self: flex-end;
}
.description{
    font-size: 35rpx;
    color: #076fbf;
    align-self: flex-end;
    padding-bottom: 15rpx;
}

.date{
    font-size: 26rpx;

    color: #666666;
    align-self: flex-end;
    flex: 1;
    /*background-color: #ff0030;*/
    text-align:right;
}
.add_thing{
    height: 40rpx;
    text-align: center;
    width: 100%;
    padding: 15rpx;
    background-color: #00ff00;
}

.libraryList{
    display: none
}


.showbook{display:block;
    width: 100%;
    height: 100vh;
        background-color: #F0F8FF;
    }

.show{display:block;
    width: 100%;
    height: 100vh;}

.hidden{display:none;text-align:center;line-height:200px;}